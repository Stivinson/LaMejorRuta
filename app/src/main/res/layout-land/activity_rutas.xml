<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/green"
    tools:context="com.stivinsonmartinez.lamejorruta.RutasMedellin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:layout_weight="1"
            android:src="@drawable/bus48"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/escogerbus"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/sp_rutas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:background="@color/silver"
                android:spinnerMode="dropdown">
            </Spinner>

            <Button
                android:layout_marginTop="10sp"
                android:layout_width="150sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/openbus"
                android:background="@color/silver"
                android:text="@string/botonbus"
                android:textAllCaps="false"
                android:layout_marginBottom="30sp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
    <!-- android:entries="@array/Rutas"-->